<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ActivityDashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="126dp"
            android:layout_height="142dp"
            android:onClick="onClick"
            app:srcCompat="@drawable/profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="User Name"
                android:textColor="#0A0909"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="123456789"
                android:textColor="#121212"
                android:textSize="20sp"
                android:textStyle="normal|bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/baseline_home_24"
            android:text="     Home"
            android:textColor="#060606"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="249dp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/baseline_credit_card_24"
            android:text="     My Crops"
            android:textColor="#090808"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/baseline_assignment_turned_in_24"
            android:text="     My Orders"
            android:textColor="#0B0B0B"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/baseline_perm_contact_calendar_24"
            android:text="     Contact us"
            android:textColor="#0E0E0E"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/baseline_assignment_late_24"
            android:text="     About"
            android:textColor="#0D0C0C"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="380dp"
            android:layout_height="54dp"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:text="     Log Out"
            android:textColor="#0B0B0B"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>